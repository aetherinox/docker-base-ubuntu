#!/usr/bin/with-contenv bash
# shellcheck shell=bash

# #
#   define > colors
#
#   Use the color table at:
#       - https://gist.github.com/fnky/458719343aabd01cfb17a3a4f7296797
# #

declare -A c=(
    [end]=$'\e[0m'
    [white]=$'\e[97m'
    [bold]=$'\e[1m'
    [dim]=$'\e[2m'
    [underline]=$'\e[4m'
    [strike]=$'\e[9m'
    [blink]=$'\e[5m'
    [inverted]=$'\e[7m'
    [hidden]=$'\e[8m'
    [black]=$'\e[0;30m'
    [redl]=$'\e[0;91m'
    [redd]=$'\e[0;31m'
    [red1]=$'\e[38;5;160m'
    [red2]=$'\e[38;5;196m'
    [magental]=$'\e[0;95m'
    [magentad]=$'\e[0;35mm'
    [fuchsia1]=$'\e[38;5;205m'
    [fuchsia2]=$'\e[38;5;198m'
    [bluel]=$'\e[0;94m'
    [blued]=$'\e[0;34m'
    [blue1]=$'\e[38;5;033m'
    [blue2]=$'\e[38;5;033m'
    [blue3]=$'\e[38;5;68m'
    [cyanl]=$'\e[0;96m'
    [cyand]=$'\e[0;36m'
    [greenl]=$'\e[0;92m'
    [greend]=$'\e[0;32m'
    [green1]=$'\e[38;5;2m'
    [green2]=$'\e[38;5;76m'
    [yellowl]=$'\e[0;93m'
    [yellowd]=$'\e[0;33m'
    [yellow1]=$'\e[38;5;184m'
    [yellow2]=$'\e[38;5;190m'
    [yellow3]=$'\e[38;5;193m'
    [orange1]=$'\e[38;5;202m'
    [orange2]=$'\e[38;5;208m'
    [greyl]=$'\e[0;37m'
    [greyd]=$'\e[0;90m'
    [grey1]=$'\e[38;5;240m'
    [grey2]=$'\e[38;5;244m'
    [grey3]=$'\e[38;5;250m'
    [navy]=$'\e[38;5;62m'
    [olive]=$'\e[38;5;144m'
    [peach]=$'\e[38;5;210m'
)

# #
#   unicode for emojis
#       https://apps.timwhitlock.info/emoji/tables/unicode
# #

declare -A icon=(
    ["symbolic link"]=$'\xF0\x9F\x94\x97' # ðŸ”—
    ["regular file"]=$'\xF0\x9F\x93\x84' # ðŸ“„
    ["directory"]=$'\xF0\x9F\x93\x81' # ðŸ“
    ["regular empty file"]=$'\xe2\xad\x95' # â­•
    ["log"]=$'\xF0\x9F\x93\x9C' # ðŸ“œ
    ["1"]=$'\xF0\x9F\x93\x9C' # ðŸ“œ
    ["2"]=$'\xF0\x9F\x93\x9C' # ðŸ“œ
    ["3"]=$'\xF0\x9F\x93\x9C' # ðŸ“œ
    ["4"]=$'\xF0\x9F\x93\x9C' # ðŸ“œ
    ["5"]=$'\xF0\x9F\x93\x9C' # ðŸ“œ
    ["pem"]=$'\xF0\x9F\x94\x92' # ðŸ”‘
    ["pub"]=$'\xF0\x9F\x94\x91' # ðŸ”’
    ["pfx"]=$'\xF0\x9F\x94\x92' # ðŸ”‘
    ["p12"]=$'\xF0\x9F\x94\x92' # ðŸ”‘
    ["key"]=$'\xF0\x9F\x94\x91' # ðŸ”’
    ["crt"]=$'\xF0\x9F\xAA\xAA ' # ðŸªª
    ["gz"]=$'\xF0\x9F\x93\xA6' # ðŸ“¦
    ["zip"]=$'\xF0\x9F\x93\xA6' # ðŸ“¦
    ["gzip"]=$'\xF0\x9F\x93\xA6' # ðŸ“¦
    ["deb"]=$'\xF0\x9F\x93\xA6' # ðŸ“¦
    ["sh"]=$'\xF0\x9F\x97\x94' # ðŸ—”
)

# #
#   keys > define
# #

SUBJECT="/C=NA/ST=NA/L=NA/O=Aetherinox/OU=Docker Image/CN=*"
if [[ -f /config/keys/cert.key && -f /config/keys/cert.crt ]]; then
    printf '%-29s %-65s\n' "  ${c[bluel]}SSL${c[end]}" "${c[end]}Using existing keys found in â€º ${c[greenl]}/config/keys${c[end]}"
else
    printf '%-29s %-65s\n' "  ${c[bluel]}SSL${c[end]}" "${c[end]}Generating self-signed keys in â€º ${c[greenl]}/config/keys${c[end]}"
    rm -f \
        /config/keys/cert.key \
        /config/keys/cert.crt || true

    mkdir -p /config/keys

    OUT=$(openssl req -new -x509 -days 3650 -nodes -out /config/keys/cert.crt -keyout /config/keys/cert.key -subj "$SUBJECT" 2>/dev/null)
fi
